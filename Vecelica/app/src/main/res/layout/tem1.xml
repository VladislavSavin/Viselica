<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/town"
    tools:context=".Tem1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/Name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/most"
            android:background="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/most"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/most" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/most" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/most" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/most" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/most" />
        </LinearLayout>

        <TextView
            android:id="@+id/winOrLose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:text=" "
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            app:srcCompat="@drawable/sost1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/butn1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="A" />

                <Button
                    android:id="@+id/butn2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"

                    android:text="Б" />

                <Button
                    android:id="@+id/butn3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"

                    android:text="В" />

                <Button
                    android:id="@+id/butn4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"

                    android:text="Е" />

                <Button
                    android:id="@+id/butn5"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"

                    android:text="Ж" />

                <Button
                    android:id="@+id/butn6"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"

                    android:text="З" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/butn7"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="И" />

                <Button
                    android:id="@+id/butn8"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="К" />

                <Button
                    android:id="@+id/butn9"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="М" />

                <Button
                    android:id="@+id/butn10"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="Н" />

                <Button
                    android:id="@+id/butn11"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="О" />

                <Button
                    android:id="@+id/butn12"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="П" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/butn13"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="Р" />

                <Button
                    android:id="@+id/butn14"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="С" />

                <Button
                    android:id="@+id/butn15"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="Т" />

                <Button
                    android:id="@+id/butn16"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="Ь" />

                <Button
                    android:id="@+id/butn17"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="Ю" />

                <Button
                    android:id="@+id/butn18"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/most"
                    android:layout_weight="1"
                    android:text="Я" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/last1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/most"
            android:text="Вернуться на выбор темы"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>